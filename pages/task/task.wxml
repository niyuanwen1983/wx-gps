<import src="../../template/template.wxml" />

<view class="wrap">
  <view class="header">
    <p class="title" style="display:none;">我的工单</p>
    <image class="search" src="/imgs/icon_search.png" style="display:none;"></image>
    <view class="search-view">
      <image class="search-left" src="/imgs/icon_search.png"></image>
      <input class="search-input"></input>
    </view>
    <button class="search-cancel">取消</button>
  </view>
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">
      未完成
      <view class="{{currentTab==0?'selected-bar':''}}"></view>
    </view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">审核中
      <view class="{{currentTab==1?'selected-bar':''}}"></view>
    </view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">审核不通过
      <view class="{{currentTab==2?'selected-bar':''}}"></view>
    </view>
    <view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">已完成
      <view class="{{currentTab==3?'selected-bar':''}}"></view>
    </view>
    <view class="swiper-tab-item {{currentTab==4?'active':''}}" data-current="4" bindtap="clickTab">超时
      <view class="{{currentTab==4?'selected-bar':''}}"></view>
    </view>
  </view>
  <view class="content" style="display:block;">
    <ul>
      <!--未完成-->
      <li wx:for="{{taskList}}" wx:key="{{index}}">
        <view class="li-wrap">
          <view class="top">
            <p>类型：{{item.asqlx==1?'安装':'拆机'}}</p>
            <p wx:if="{{aspzt==1}}" class="uncompleted">未完成</p>
            <p wx:if="{{aspzt==5}}" class="auditing">审核中</p>
            <p wx:if="{{aspzt==3}}" class="failed">审核不通过</p>
            <p wx:if="{{aspzt==2}}" class="completed">已完成</p>
            <p wx:if="{{aspzt==6}}" class="timeouted">超时</p>
          </view>
          <ol class="bottom">
            <li>
              <span class="tit">客户姓名：</span>
              <span class="des">{{item.axm}}</span>
            </li>
            <li>
              <span class="tit">车牌号码：</span>
              <span class="des">{{item.acp==null?'无':item.acp}}</span>
            </li>
            <li>
              <view class="view-row">
                <span class="tit">期望安装时间：</span>
                <span class="des">{{item.dqwazsj==null?'无':item.dqwazsj}}</span>
              </view>
            </li>
            <li>
              <view class="view-row">
                <a href="javascript:;" class="abandonBtn">取消</a>
                <a href="javascript:;" class="confirmBtn">拆机</a>
              </view>
            </li>
          </ol>
        </view>
        <view class="bottom-bar"></view>
      </li>
    </ul>
  </view>
</view>

<template is="tabBar" data="{{tabBar:bindData.tabBar}}" />