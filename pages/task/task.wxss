page {
  height: 100%;
}

.wrap {
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  flex-direction: column;
  margin: 0 0 100rpx 0;
}

.content {
  background-color: #fff;
  overflow-y: scroll;
  margin: 20rpx 28rpx 80rpx 28rpx;
}

.header {
  width: 100%;
  height: 88rpx;
  background: #465ffd;
  font-size: 28rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
}

.content ul li {
  background: #fff;
  margin: 20rpx 0 0 0;
}

.content ul li .top {
  font-size: 28rpx;
  font-weight: 500;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.content ul li .bottom {
  font-size: 0;
}

.content ul li .bottom li {
  padding: 0;
  font-size: 0;
}

.content ul li .bottom li:nth-child(1) {
  display: inline-block;
  width: 50%;
}

.content ul li .bottom li:nth-child(2) {
  display: inline-block;
  width: 50%;
  text-align: right;
}

.content ul li .bottom li:last-child {
  margin-bottom: 0;
  text-align: right;
}

.content ul li .bottom .tit {
  display: inline-block;
  font-size: 26rpx;
  color: #999;
}

.content ul li .bottom .des {
  display: inline-block;
  font-size: 26rpx;
  color: #666;
}

.content ul li .bottom li a {
  display: inline-block;
  width: 104rpx;
  height: 44rpx;
  font-size: 24rpx;
  border: 1rpx solid #445dfd;
  border-radius: 4rpx;
  text-align: center;
  line-height: 44rpx;
}

.content ul li .bottom li a.abandonBtn {
  color: #445dfd;
}

.content ul li .bottom li a.confirmBtn {
  color: #fff;
  background-color: #445dfd;
  margin-left: 48rpx;
}

.li-wrap {
  padding: 20rpx 28rpx;
}

.view-row {
  margin: 48rpx 0 0 0;
}

.bottom-bar {
  width: 100%;
  height: 20rpx;
  background-color: #f8f8f8;
  margin-top: 20rpx;
}

.uncompleted {
  background: #dadfff;
  border-radius: 4rpx;
  color: #445dfd;
  float: right;
  margin: 0 4rpx 0 0;
  padding: 8rpx 16rpx;
}

.auditing {
  background: #ffb573;
  border-radius: 4rpx;
  color: #fff;
  float: right;
  margin: 0 4rpx 0 0;
  padding: 8rpx 16rpx;
}

.failed {
  background: #fa6f5c;
  border-radius: 4rpx;
  color: #fff;
  float: right;
  margin: 0 4rpx 0 0;
  padding: 8rpx 16rpx;
}

.completed {
  background: #b1d45e;
  border-radius: 4rpx;
  color: #fff;
  float: right;
  margin: 0 4rpx 0 0;
  padding: 8rpx 16rpx;
}

.timeouted {
  background: #b5b5b5;
  border-radius: 4rpx;
  color: #fff;
  float: right;
  margin: 0 4rpx 0 0;
  padding: 8rpx 16rpx;
}

.redoBtn {
  color: #445dfd;
  padding: 0 16rpx;
}

/* 顶部tab部分*/

.swiper-tab {
  background: #fff;
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  /*display: flex;*/
  flex-flow: row;
  justify-content: space-between;
  color: #ccc;
  font-size: 16px;
}

.swiper-tab-item {
  color: #999;
  display: inline-block;
  font-size: 28rpx;
  height: 88rpx;
  width: 20%;
}

.selected-bar {
  background: #445dfd;
  height: 4rpx;
  width: 40rpx;
  margin: -20rpx auto 0 auto;
}

.active {
  color: #445dfd;
  font-weight: bold;
}

.juzhong {
  margin: 0 auto;
}

.domain {
  background-color: #fff;
  height: 100%;
  margin: 0 10px;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.search {
  height: 28rpx;
  margin: 32rpx 32rpx 0 0;
  position: absolute;
  top: 0;
  right: 0;
  width: 28rpx;
}

.search-view {
  background: #fff;
  border-radius: 32rpx;
  margin: 16rpx;
  width: 600rpx;
}

.search-left {
  float: left;
  height: 28rpx;
  margin: 12rpx 0 0 18rpx;
  width: 28rpx;
}

.search-input {
  color: #000;
  height: 44rpx;
  margin: 0 0 0 64rpx;
  text-align: left;
  width: 540rpx;
}

.search-cancel {
  background: #445dfd;
  border: none;
  color: #fff;
  float: right;
  font-size: 30rpx;
  height: 28rpx;
  margin: -54rpx 0 0 0;
  width: 100rpx;
}

.search-cancel:after {
  border: none;
}

.fShow {
  display: block;
}

.fHide {
  display: none;
}

.iShow {
  display: block;
}

.iHide {
  display: none;
}

.search-wrap {
  background-color: #fff;
  width:100%;
  position:absolute;
  top:88rpx;
  left:0;
}

.search-wrap .search-main {
  padding:0 30rpx;
}

.search-wrap .search-item {
  padding:25rpx 0;
  font-size:28rpx;
  color:#666;
  border-bottom:1px solid #EEF1FF;
  text-align:left;
}
