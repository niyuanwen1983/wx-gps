page {
  height: 100%;
}

.wrap {
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  flex-direction: column;
}

.content {
  flex: 1;
  overflow-y: scroll;
}

.header {
  width: 100%;
  height: 88rpx;
  background: #465ffd;
  font-size: 28rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
}

/*设备确认*/

.equipInfo .customerInfo, .equipInfo .deviceInfo {
  background: #fff;
  padding: 24rpx 28rpx;
}

.equipInfo h1 {
  font-weight: 500;
  font-size: 30rpx;
  color: #333;
  margin: 0 0 72rpx 0;
}

.equipInfo h2 {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 0.40rem;
}

.equipInfo ul li .tit {
  font-size: 26rpx;
  color: #999;
}

.equipInfo ul li .des {
  font-size: 26rpx;
  color: #666;
}

.equipInfo ul li .des a {
  display: inline-block;
  color: #445dfd;
  margin-left: 0.29rem;
}

.equipInfo ul li:last-child {
  margin-bottom: 0;
}

.equipInfo .warning {
  font-size: 26rpx;
  color: #ff2b2b;
  margin: 48rpx auto 48rpx auto;
  width:520rpx;
}

.confirmBtn {
  display: block;
  width: 600rpx;
  height: 88rpx;
  background: rgba(68, 93, 253, 1);
  border-radius: 45px;
  outline: none;
  border: 0;
  margin: 0.40rem auto 0.33rem auto;
  font-size: 30rpx;
  color: #fefefe;
  padding:28rpx 0;
}

.removeBtn {
  display: block;
  width: 600rpx;
  background: #fff;
  border-radius: 45px;
  outline: none;
  margin: 36rpx auto 0 auto;
  font-size: 30rpx;
  color: #465ffd;
}

.removeBtn:after{
  border:none;
}

.back>image {
  height: 44rpx;
  display: none;
  width: 54rpx;
}
