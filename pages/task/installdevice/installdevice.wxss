/* pages/task/installdevice/installdevice.wxss */
.wrap {
    display: -webkit-flex;
    display: flex;
    width:100%;
    height:100%;
    background-color:#f8f8f8;
    flex-direction: column;
}
.content {
    flex: 1;
    overflow-y: scroll;
}
.header {
    height:88rpx;
    background:#465FFD;
    font-size:30rpx;
    color:#fff;
    line-height:88rpx;
    text-align:center;
    padding:0 30rpx;
}
.header p.back,
.header p.subTitle {
    width:40rpx;
    height:88rpx;
    float:left;
}
.header p.back image {
    width:35rpx;
    height:30rpx;
    margin-top:29rpx;
}
.header p.title {
  width:610rpx;
  height:88rpx;
  float:left;
  text-align:center;
}
.header p.subTitle .img {
  width:30rpx;
  height:30rpx;
}
.buildInfo .basisInfo,
.buildInfo .installationInfo {
  background:#fff;
  padding:59rpx 30rpx 42rpx 30rpx;
}
.buildInfo .basisInfo ul li .pic {
  display:block;
  margin-top:36rpx;
}
.buildInfo .basisInfo ul li .pic i {
  width:156rpx;
  height:130rpx;
  background:#EEF1FF;
  text-align:center;
  margin-right: 50rpx;
  display: flex;
  align-items: center;
  justify-content:center;
  float:left;
}
.buildInfo h1 {
  display:block;
  font-weight:500;
  font-size:30rpx;
  color:#333;
  margin-bottom:38rpx;
}
.buildInfo ul {
    font-size:0;
}
.buildInfo ul li {
  display:block;
  margin-bottom:36rpx;
}
.buildInfo ul li .tit {
    font-size:26rpx;
    color:#999;
}
.buildInfo ul li .des {
    font-size:26rpx;
    color:#666;
}
.buildInfo ul li .des input {
    border:0;
    outline:none;
}
.buildInfo ul li:last-child {
    margin-bottom:0;
}
.buildInfo .installationInfo .chk {
    vertical-align:middle;
    margin-right:20rpx
}
.buildInfo .installationInfo .pic {
    display:block;
}
.buildInfo .installationInfo .pic .item {
    float:left;
    margin-right: 12rpx;
    margin-top:33rpx;
    font-size:26rpx;
    color:#666666;
    text-align:center;
}
.buildInfo .installationInfo .pic .item:nth-child(4n) {
  margin-right: 0;
}
.buildInfo .installationInfo .pic i {
    width:156rpx;
    height:130rpx;
    background:#EEF1FF;
    display: flex;
    align-items: center;
    justify-content:center;
    margin:0 auto;
    position:relative;
}
.carema {
    width:36rpx;
    height:27rpx;
}
.photo{
  height:100%;
  width:100%;
}
.buildInfo .installationInfo ul li p {
    font-size:26rpx;
    color:#999;
}
.buildInfo .submitBtn {
    display:block;
    width:690rpx;
    height:90rpx;
    background:rgba(68,93,253,1);
    border-radius:45px;
    outline:none;
    border:0;
    margin:52rpx auto 82rpx;
    font-size:32rpx;
    color:#FEFEFE;
    line-height:90rpx;
}
.buildInfo .installationInfo ul li .des label {
    display:inline-block;
    margin-left:30rpx;
}
.buildInfo .installationInfo ul li .des label image {
    width:22rpx;
    height:22rpx;
    margin-right:20rpx;
}
.tk {
    width:100%;
    height:100%;
    background-color:rgba(0,0,0,.5);
    position:fixed;
    top:0;
    left:0;
    z-index:10;
}
.tk .box {
    width:8.40rem;
    height:6.94rem;
    padding:0.40rem 0.33rem;
    background-color:#fff;
    position:absolute;
    top:50%;
    left:50%;
    z-index:15;
    margin:-3.80rem 0 0 -4.60rem;
}
.tk .box img {
    display:block;
    width:100%;
}
.tk .box .close {
    width:0.44rem;
    height:0.44rem;
    position:absolute;
    top:0.30rem;
    right:0.30rem;
}
.cls {
  position:absolute;
  top:0;
  right:0;
  width:30rpx;
  height:30rpx;
  background:#fff;
  font-size:20rpx;
  color:#465FFD;
  text-align:center;
  line-height:30rpx;
}