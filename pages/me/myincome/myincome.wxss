page {
  height: 100%;
}

.wrap {
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  flex-direction: column;
}

.content {
  flex: 1;
  overflow-y: scroll;
}

.header {
  width: 100%;
  height: 88rpx;
  background: #465ffd;
  font-size: 28rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
}

.range-select {
  display: flex;
  flex-direction: row;
}

.range-date {
  width: 360rpx;
}

.range-money {
  text-align:right;
  width: 360rpx;
}

.date-picker {
  color: #333;
  display: inline-block;
  font-size: 26rpx;
  margin: 32rpx 20rpx 24rpx 20rpx;
}

.income-title {
  color: #333;
  display: inline-block;
  font-size: 26rpx;
  margin: 32rpx 20rpx 24rpx 0;
}

.income-row {
  background: #fff;
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  padding: 40rpx;
  text-align: left;
  align-items: center;
}

.income-left {
  width: 200rpx;
}

.income-center {
  width: 480rpx;
}

.income-left>view {
  text-align: center;
}

.income-center>view {
  text-align: center;
}

.income-right {
  text-align: right;
  width: 40rpx;
}

.money, .num {
  color: #333;
  font-size: 24rpx;
  text-align: center;
}

.row-title {
  font-size: 26rpx;
}

.arrow {
  height: 24rpx;
  width: 24rpx;
}
