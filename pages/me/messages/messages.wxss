page {
  height: 100%;
}

.wrap {
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  flex-direction: column;
}

.content {
  flex: 1;
  overflow-y: scroll;
}

.header {
  width: 100%;
  height: 88rpx;
  background: #465ffd;
  font-size: 28rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
}

.messages-row {
  background: #fff;
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  padding: 40rpx;
  text-align: left;
  align-items: center;
}

.messages-left {
  width: 540rpx;
}

.messages-content {
  font-size: 28rpx;
  font-weight: bolder;
}

.messages-dot {
  display: none;
  width: 12rpx;
  height: 12rpx;
  background: rgba(70, 95, 253, 1);
  border-radius: 50%;
  position: relative;
  top: 24rpx;
  left: -12rpx;
}

.date-time {
  color: #999;
  font-size: 26rpx;
}
